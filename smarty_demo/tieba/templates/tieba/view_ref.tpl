{include file="header_ref.tpl"}<br/><div id="pb_content" class="post_link">共有<span class="red">{$reply_row|@count}</span>篇帖子 <br/>	<div id="thread_title1">		{$article_row.title}	</div>	<div class="post">	<table>		<tbody>		  <tr>						{if $article_row.author == ''}						<td valign="top" nowrap="nowrap" class="author_anonym">{$article_row.ip}</td>							{else}			<td valign="top" nowrap="nowrap" name="autonym" id="autonym" class="author">								<ul>							<li class="icon post_icon">										<img src="images/ui.jpg" class="icon">				</li>				<li class="name">				  {$article_row.author}				</li>				</ul>			</td>			{/if}						<td valign="top" class="content">				<p class="floor">1楼</p>				{$article_row.content}			</td>		  </tr>		  <tr>			<td class="info gray" colspan="2">				<ul>				<li>{$article_row.create_time|date_format:"%m-%d %H:%M"}</li>							</ul>			</td>		  </tr>		</tbody>	</table>	</div>	<div class="post_split"><div class="split_line"></div></div>					{section name=re loop=$reply_row}	<div class="post">	<table>		<tbody>		  <tr>			{if $reply_row[re].author == ''}						<td valign="top" nowrap="nowrap" class="author_anonym">{$reply_row[re].ip}</td>							{else}			<td valign="top" nowrap="nowrap" name="autonym" id="autonym" class="author">								<ul>							<li class="icon post_icon">										<img src="images/ui.jpg" class="icon">				</li>				<li class="name">				  {$reply_row[re].author}				</li>				</ul>			</td>			{/if}			<td valign="top" class="content">				<p class="floor">{$smarty.section.re.iteration+1}楼</p>				{$reply_row[re].content}			</td>		  </tr>		  <tr>			<td class="info gray" colspan="2">				<ul>				<li>{$reply_row[re].create_time|date_format:"%m-%d %H:%M"}</li>						</ul>			</td>		  </tr>		</tbody>	</table>	</div>	<div class="post_split"><div class="split_line"></div></div>	{/section}	</div><form action="?a=reply" method="post">    <label><span>内　容: </span><textarea name="content"></textarea></label>  <label><span>作　者: </span><input type="text" class="txt" name="author" style="width:90px;"/></label>  <input type="hidden" name="id" value="{$article_row.id}" />  <label><input type="submit" value="快速回复" /></label></form><h1><a href="?">返回帖子列表</a></h1>{include file="footer.tpl"}